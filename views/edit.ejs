<section class="compose-card">
    <h2>Edit Post</h2>
    <form method="POST" action="/posts/<%= post.id %>/">
        <label>Title <input name="title" required maxlength="120" value="<%= post.title %>" /></label>
        <label>Body <textarea name="body" required rows="8"><%= post.body %></textarea></label>
        <div class="actions">
            <a href="/">Cancel</a>
            <button type="submit">Save Changes</button>
        </div>
    </form>
</section>